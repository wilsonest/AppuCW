@model IEnumerable<Products_lost_helps.Models.Clients>



@if (Model == null || !Model.Any())
{
    <p>No hay datos disponibles.</p>
}

@{
    ViewBag.Title = "Appu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<thead>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Edad
        </th>
        <th>
            Cuenta
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuenta)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-light" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</tbody>
